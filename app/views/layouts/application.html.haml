%html
  %head
    %title= @site_title || 'OpenDay'
    = csrf_meta_tags 
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true

  %body
    .navbar.navbar-default.navbar-static-top{role: "navigation"}
      .container
        .navbar-header
          %button{type: "button", class: "navbar-toggle", 'data-toggle' => "collapse", 'data-target' => ".navbar-collapse"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to CONFIG['od_site_title'], root_path, class: "navbar-brand"
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li.active= link_to t('nav_opendays'), root_path
            %li= link_to t('nav_reports'), root_path
            %li= link_to t('nav_faculties'), faculties_path
            %li.dropdown
    .container
      %noscript
        .alert.alert-warning
          %strong= t('warning').html_safe
          = t('javascript_warning').html_safe
      - if flash[:error]
        .alert.alert-danger#flash_error
          = flash[:error]
      - elsif flash[:success]
        .alert.alert-success#flash_success
          = flash[:success]
      = yield
  
    :javascript
      $("#flash_success").delay(5000).animate({height: 0, margin:0, padding: 0}, 350, "linear", function() {$("#flash_success").hide();});