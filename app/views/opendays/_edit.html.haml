.modal-dialog
  .modal-content
    .modal-header
      %h4
        = t('faculty_edit')
    .modal-body
      = simple_form_for @openday, html:{class: 'form-openday'} do |f|
        .form-group.openday-form
          %fieldset
            = f.label :name, t('name') 
            = f.text_field :name, class: 'form-control'

            = f.input :registration_open, :as => :string, :input_html => {:class => 'datetimepicker form-control col-sm-6'}

            = f.input :registration_end, :as => :string, :input_html => {:class => 'datetimepicker form-control col-sm-6'}

            = f.input :date, :as => :string, :input_html => {:class => 'datepicker form-control col-sm-6'}  

        = f.submit t('btn_submit'),remote: true, disable_with: t('btn_submiting'), class: 'btn btn-primary pull-right'

      = button_to(t('delete'), @openday, confirm: t('confirm_delete'), method: 'delete', class: "btn btn-danger")

:javascript
    $('.datepicker').datepicker({
      dateFormat: "yy-mm-dd",
      todayHighlight: true,
      todayBtn: 'linked',
      autoclose: true
    }); ;

    $('.datetimepicker').datetimepicker({
      dateFormat: "yy-mm-dd",
      timeFormat: "HH:mm",
      todayHighlight: true,
      todayBtn: 'linked',
      autoclose: true
    }); ;