%li.list-group-item
  .list-group-head
    .list-group-child
      %span.clickable.glyphicon-left.glyphicon.glyphicon-chevron-down{onclick: 'toggleChildren(this)'}
      %span
        =openday.name
        %small.gray
      = link_to '' ,edit_openday_path(openday), remote: true, class: 'clickable glyphicon glyphicon-pencil pull-right', onclick: "$('#myModal').modal('toggle');"
    .list-group-child.list-expandable
      - openday.openday_faculties.each do |od_faculty|
        .list-group-head.sub
          %span.spacer
          %span.clickable.glyphicon-left.glyphicon.glyphicon-chevron-right{onclick: 'toggleChildren(this)'}
          %span
            = od_faculty.faculty.name
            %small{:class => ("error-text" unless od_faculty.openday_programmes.count > 0)}
              = "(#{od_faculty.openday_programmes.count}"
              = "#{t('faculty_programmes.count', :count => od_faculty.openday_programmes.count)})"
        .list-group-child.list-expandable
          - od_faculty.openday_programmes.each do |od_programme|
            .list-group-head.sub
              %span.spacer
              %span.spacer
              %span.clickable.glyphicon-left.glyphicon.glyphicon-chevron-right{onclick: 'toggleChildren(  this)'}
              %span= od_programme.programme.name
            .list-group-child.list-expandable
              .list-group-head.sub
                %span.spacer
                %span.spacer
                %span.spacer
                %span.clickable.glyphicon-left.glyphicon.glyphicon-chevron-right{onclick: 'toggleChildren(  this)'}
                %span= t('openday_timeslots')
              .list-group-child.list-expandable
                .list-group-head.sub
                  %span.spacer
                  %span.spacer
                  %span.spacer
                  %span.spacer
                  %span.clickable.glyphicon-left.glyphicon.glyphicon-plus
                  %span= t('openday_add_timeslots')
          .list-group-head.sub
            %span.spacer
            %span.spacer
            = link_to '', openday_programmes_path(openday, od_faculty),remote: true,onclick: "$('#myModal').modal('toggle');", class: 'clickable glyphicon-left glyphicon glyphicon-plus'
            %span= t('openday_select_programmes')
      .list-group-head.sub
        %span.spacer
        = link_to '', openday_faculties_path(openday),remote: true, onclick: "$('#myModal').modal('toggle');", class: 'clickable glyphicon-left glyphicon glyphicon-plus'
        %span= t('openday_select_faculties')
    